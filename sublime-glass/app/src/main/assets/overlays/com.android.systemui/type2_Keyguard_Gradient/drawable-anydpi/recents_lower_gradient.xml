<?xml version="1.0" encoding="utf-8"?>
<layer-list
	xmlns:android="http://schemas.android.com/apk/res/android">
  
	<item
		android:gravity="bottom"
		android:left="0dp" android:right="0dp"
		android:bottom="-3dp">
		<shape android:shape="rectangle">
			<gradient 
				android:startColor="@*android:color/accent_material_dark" 
				android:endColor="@*android:color/transparent"
				android:angle="90.0" 
				android:type="linear" 
				android:centerY="0.5"
				android:centerColor="@*android:color/transparent" />
			<size android:height="60dp" />
		</shape>
	</item>
	<item
		android:gravity="bottom"
		android:left="0dp" android:right="0dp"
		android:bottom="-3dp">
        <shape android:shape="rectangle">
            <gradient 
				android:startColor="@*android:color/accent_material_dark" 
				android:endColor="@*android:color/transparent"
				android:angle="90.0" 
				android:type="linear" 
				android:centerY="0.5"
				android:centerColor="@*android:color/transparent" />
			<size android:height="50dp" />
        </shape>
    </item>
	
	<!-- ROUND UI -->
	<item
		android:top="-7dp"
		android:bottom="-7dp"
		android:left="-7dp"
		android:right="-7dp">
		<shape android:shape="rectangle">
			<corners android:radius="20.0dip" />
            <stroke android:width="8.0dip" android:color="@*android:color/black" />
            <solid android:color="#00000000" />		
		</shape>
    </item>

	<item
		android:top="-7dp"
		android:bottom="-7dp"
		android:left="-7dp"
		android:right="-7dp">
		<shape android:shape="rectangle">
			<corners android:radius="0.0dip" />
            <stroke android:width="8.0dip" android:color="@*android:color/black" />
            <solid android:color="#00000000" />		
		</shape>
    </item>
	
	
	
</layer-list>
