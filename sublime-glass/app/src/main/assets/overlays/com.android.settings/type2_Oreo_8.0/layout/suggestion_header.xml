<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@*com.android.settings:drawable/selectable_card_grey"
    android:gravity="center_vertical"
    android:paddingTop="4dp">
  
	<FrameLayout
		android:layout_width="52dp"
		android:layout_height="fill_parent">

		<TextView
			android:id="@*android:id/summary"	
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:gravity="start"
			android:paddingStart="5dp"
			android:paddingTop="12dp"
			android:textAppearance="@*com.android.settings:style/TextAppearance.SuggestionTitle"
			android:textColor="?android:attr/colorAccent"/>
	</FrameLayout>
	
	<TextView
        android:id="@*android:id/title"
		android:layout_marginRight="-37dp"
		android:shadowColor="@android:color/black"
		android:shadowRadius="20.0"
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textAllCaps="true"
        android:textAppearance="@*com.android.settings:style/TextAppearance.SuggestionTitle"
        android:textColor="@*android:color/Teal_700"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"/>
	
	<ImageView
        android:id="@*android:id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="@*com.android.settings:dimen/dashboard_tile_image_margin_end"
        android:src="@*com.android.settings:drawable/ic_expand_more"/>
	
</LinearLayout>
