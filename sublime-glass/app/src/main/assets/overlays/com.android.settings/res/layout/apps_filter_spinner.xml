<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="?android:attr/actionBarSize"
	android:background="@*com.android.settings:drawable/selectable_card_grey"
	android:gravity="center_vertical"
	android:paddingEnd="@*com.android.settings:dimen/switchbar_subsettings_margin_end"
	android:orientation="horizontal">

	<Spinner
		android:id="@*com.android.settings:id/filter_spinner"
		android:layout_height="wrap_content"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:paddingStart="49dp"
		android:background="@null"/>

	<ImageView
		android:id="@*com.android.settings:id/filter_settings"
		style="?android:attr/borderlessButtonStyle"
		android:layout_width="56dp"
		android:layout_height="56dp"
		android:contentDescription="@*com.android.settings:string/configure"
		android:scaleType="center"
		android:src="@*com.android.settings:drawable/ic_settings_24dp_inverse"
		android:visibility="gone"/>

</LinearLayout>

