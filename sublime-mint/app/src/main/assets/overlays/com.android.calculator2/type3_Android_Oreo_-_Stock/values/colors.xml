<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default background color for the status bar. -->
    <color name="calculator_accent_color">@*android:color/Indigo_800</color>
    <!-- Color to indicate an error has occured. -->
    <color name="calculator_error_color">#F40056</color>
    <!-- Background color of the calculator display. -->
    <color name="display_background_color">@*android:color/Indigo_800</color>
    <!-- Text color for the formula in the calculator display. -->
    <color name="display_formula_text_color">@android:color/white</color>
    <!-- Text color for the result in the calculator display. -->
    <color name="display_result_text_color">@*android:color/Teal_700</color>
    <!-- Background color for the numeric pad. -->
    <color name="pad_numeric_background_color">@*android:color/Indigo_700</color>
    <!-- Background color for the operator pad. -->
    <color name="pad_operator_background_color">@*android:color/Pink_700</color>
    <!-- Background color for the advanced pad. -->
    <color name="pad_advanced_background_color">@*android:color/Teal_700</color>
    <!-- Text color for a button in a pad. -->
    <color name="pad_button_text_color">#FFF</color>
    <!-- Text color for a button in the advanced pad. -->
    <color name="pad_button_advanced_text_color">#000000</color>
    <!-- Ripple color when a button is pressed in a pad. -->
    <color name="pad_button_ripple_color">@*android:color/Teal_700</color>
    <!-- Ripple color when a button is pressed in a pad. -->
    <color name="pad_button_advanced_ripple_color">#000000</color>
</resources>
