	<style name="GeckoBase" parent="@*org.mozilla.firefox_beta:style/Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:alertDialogTheme">@*org.mozilla.firefox_beta:style/GeckoAlertDialog</item>
		<item name="*org.mozilla.firefox_beta:windowActionBar">false</item>
		<item name="*org.mozilla.firefox_beta:windowNoTitle">true</item>
		<item name="*org.mozilla.firefox_beta:colorPrimary">@*android:color/Pink_700</item>
		<item name="*org.mozilla.firefox_beta:colorPrimaryDark">@*android:color/Red_800</item>
	</style>
		
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material">
