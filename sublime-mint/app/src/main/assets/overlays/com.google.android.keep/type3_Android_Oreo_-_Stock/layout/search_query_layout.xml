<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText 
		android:textSize="16.0sp" 
		android:textColor="#FFFFFF"
		android:textColorHint="@*android:color/Blue_700" 
		android:gravity="center_vertical"
		android:layout_gravity="center_vertical" 
		android:id="@*com.google.android.keep:id/search_actionbar_query_text"
		android:background="@null" 
		android:paddingLeft="8.0dip"
		android:paddingRight="8.0dip"
		android:layout_width="0.0dip"
		android:layout_height="36.0dip"
		android:hint="@*com.google.android.keep:string/search_notes_hint"
		android:singleLine="true"
		android:layout_weight="1.0" 
		android:inputType="textNoSuggestions"
		android:imeOptions="actionSearch|flagNoExtractUi" />
    <ImageView
		android:tint="#FFFFFF"
		android:gravity="center_vertical"
		android:layout_gravity="center_vertical" 
		android:id="@*com.google.android.keep:id/search_actionbar_clear_button" 
		android:background="?android:selectableItemBackground" 
		android:visibility="gone" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:src="@*com.google.android.keep:drawable/ic_cancel_dark" 
		android:scaleType="center" 
		android:contentDescription="@*com.google.android.keep:string/clear_search_content_description" />
</merge>
