	<item
		android:gravity="bottom"
		android:left="0dp" android:right="0dp"
		android:bottom="5dp">
		<shape android:shape="rectangle">
			<gradient 
				android:startColor="@*android:color/Purple_700" 
				android:endColor="@*android:color/transparent"
				android:angle="90.0" 
				android:type="linear" 
				android:centerY="0.5"
				android:centerColor="@*android:color/transparent" />
			<size android:height="60dp" />
		</shape>
	</item>
	<item
		android:gravity="bottom"
		android:left="0dp" android:right="0dp"
		android:bottom="5dp">
        <shape android:shape="rectangle">
            <gradient 
				android:startColor="@*android:color/Teal_700" 
				android:endColor="@*android:color/transparent"
				android:angle="90.0" 
				android:type="linear" 
				android:centerY="0.5"
				android:centerColor="@*android:color/transparent" />
			<size android:height="50dp" />
        </shape>
    </item>
	
	<!-- ROUND UI -->
	<item
		android:left="-5dp"
		android:right="-5dp">
		<shape android:shape="rectangle">
			<corners android:radius="20.0dip" />
            <stroke android:width="8.0dip" android:color="@*android:color/black" />
            <solid android:color="#00000000" />		
		</shape>
    </item>

	<item
		android:left="-5dp"
