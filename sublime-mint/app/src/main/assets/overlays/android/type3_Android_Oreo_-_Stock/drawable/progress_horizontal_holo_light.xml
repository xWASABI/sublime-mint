<?xml version="1.0" encoding="utf-8"?>
<layer-list
	xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:tint="#ff000000" android:shape="rectangle">
            <size android:height="1.0dip" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <shape android:tint="#70ffffff" android:shape="rectangle">
                <size android:height="1.0dip" />
                <solid android:color="@android:color/white" />
            </shape>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:tint="@*android:color/Teal_700" android:shape="rectangle">
                <size android:height="1.0dip" />
                <solid android:color="@android:color/white" />
            </shape>
        </scale>
    </item>
</layer-list>
