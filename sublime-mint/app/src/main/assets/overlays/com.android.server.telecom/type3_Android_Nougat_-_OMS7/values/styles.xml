<?xml version="1.0" encoding="utf-8"?>
<resources>
   
    <style name="Theme.Telecomm.Transparent" parent="@*android:style/Theme.Material" />
    <style name="Theme.Telecom.DialerSettings" parent="@*android:style/Theme.Material">
		<item name="android:colorForeground">#00000000</item>
        <item name="android:colorPrimary">@*android:color/Pink_700</item>
		<item name="android:statusBarColor">@*android:color/Indigo_800</item>
		<item name="android:navigationBarColor">@*android:color/Indigo_700</item>
		<item name="android:windowBackground">@*android:color/Indigo_700</item>
        <item name="android:colorAccent">@*android:color/Teal_700</item>
    </style>
    <style name="Theme.Telecom.BlockedNumbers" parent="@*android:style/Theme.Material">
  		<item name="android:colorForeground">#00000000</item>
        <item name="android:colorPrimary">@*android:color/Pink_700</item>
		<item name="android:statusBarColor">@*android:color/Indigo_800</item>
		<item name="android:navigationBarColor">@*android:color/Indigo_700</item>
		<item name="android:windowBackground">@*android:color/Indigo_700</item>
        <item name="android:colorAccent">@*android:color/Teal_700</item>
    </style>

    <style name="BlockedNumbersButton">
        <item name="android:textColor">@*com.android.server.telecom:color/theme_color</item>
        <item name="android:textSize">@*com.android.server.telecom:dimen/blocked_numbers_font_size</item>
        <item name="android:textAllCaps">true</item>
		<item name="android:layout_gravity">center</item>
    </style>
	
	<style name="BlockedNumbersTitleText" parent="@*com.android.server.telecom:style/BlockedNumbersText">
        <item name="android:textColor">#FFFFFF</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:gravity">center</item>
    </style>
	
</resources>
