<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

        <LinearLayout android:id="@*com.android.settings:id/type"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

            <TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@*com.android.settings:dimen/sim_dialog_margin_top"
				android:paddingStart="@*com.android.settings:dimen/sim_content_padding"
				android:text="@*com.android.settings:string/sim_editor_name" />

            <EditText android:id="@*com.android.settings:id/sim_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:paddingStart="@*com.android.settings:dimen/sim_content_padding"
				android:paddingBottom="@*com.android.settings:dimen/sim_dialog_margin_bottom"
				android:hint="@*com.android.settings:string/wifi_ssid_hint"
				android:inputType="textNoSuggestions"
				android:maxLength="@*com.android.settings:integer/sim_name_length"
				android:textColor="@android:color/white"
				style="?*android:attr/textAppearanceMedium" />

        </LinearLayout>
		
        <LinearLayout
			android:background="@*android:color/Indigo_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@*com.android.settings:dimen/sim_dialog_margin_top"
                android:paddingStart="@*com.android.settings:dimen/sim_content_padding"
                android:text="@*com.android.settings:string/color_title" />

            <Spinner
                android:id="@*com.android.settings:id/spinner"	
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingStart="@*com.android.settings:dimen/sim_content_padding" />

        </LinearLayout>
		
        <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

            <TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@*com.android.settings:dimen/sim_dialog_margin_top"
				android:paddingStart="@*com.android.settings:dimen/sim_content_padding"
				android:text="@*com.android.settings:string/sim_editor_carrier" />

            <TextView android:id="@*com.android.settings:id/carrier"
				android:textColor="@android:color/white"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="@*com.android.settings:dimen/sim_content_padding"
				android:paddingBottom="@*com.android.settings:dimen/sim_dialog_margin_bottom"
				android:singleLine="true"
				style="?*android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

            <TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@*com.android.settings:dimen/sim_dialog_margin_top"
				android:paddingStart="@*com.android.settings:dimen/sim_content_padding"
				android:text="@*com.android.settings:string/sim_editor_number" />

            <TextView android:id="@*com.android.settings:id/number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="@*com.android.settings:dimen/sim_dialog_margin_bottom"
				android:paddingStart="@*com.android.settings:dimen/sim_content_padding"
				android:singleLine="true"
				android:textColor="@android:color/white"
				style="?*android:attr/textAppearanceMedium" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
