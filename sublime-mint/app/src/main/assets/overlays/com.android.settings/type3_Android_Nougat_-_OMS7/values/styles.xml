<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<attr name="preferenceBackgroundColor" format="color" />
	<style name="FallbackHome" parent="@android:style/Theme.Material" />
    <style name="Theme.FingerprintEnroll" parent="@*com.android.settings:style/SuwThemeGlif">
        <item name="android:textAppearanceListItemSmall">@android:style/TextAppearance.Material.Body1</item>
		<item name="android:navigationBarColor">@*android:color/Indigo_800</item>
		<item name="android:colorAccent">@*android:color/Pink_700</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
	</style>
	
	<style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
		<item name="android:windowBackground">@*android:color/Indigo_700</item>
		<item name="android:windowNoTitle">true</item>
	</style>
	<style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">	
		<item name="android:windowBackground">@*com.android.settings:drawable/preference_background</item>
		<item name="android:colorForeground">@*android:color/transparent</item>
	</style>
	<style name="Theme.AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert" />
	<style name="Theme.SettingsBase" parent="@android:style/Theme.Material">
		<item name="android:listDivider">@*android:color/transparent</item>	
		<item name="android:windowBackground">@*com.android.settings:drawable/preference_background</item>
		<item name="android:backgroundTint">@null</item>
		<item name="android:verticalScrollbarPosition">right</item>
		<item name="android:scrollbarStyle">outsideOverlay</item>
		<item name="android:fadeScrollbars">true</item>
		<item name="android:colorPrimary">@*android:color/Pink_700</item>
		<item name="android:colorPrimaryDark">@*android:color/Pink_800</item>
		<item name="android:navigationBarColor">@*android:color/Indigo_700</item>
		<item name="android:colorForeground">@*android:color/transparent</item>
		<item name="android:colorControlHighlight">@*android:color/Teal_700</item>
		<item name="android:colorEdgeEffect">@*android:color/Teal_700</item>	
	</style>	
	<style name="TextAppearance.CategoryTitle" parent="@android:style/TextAppearance.Material.Body2">
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@*android:color/Teal_700</item>
		<item name="android:shadowRadius">20</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:letterSpacing">0.23</item>
		<item name="android:textSize">13sp</item>
		
	</style>
	<style name="TextAppearance.TileTitle" parent="@*android:style/TextAppearance.Material.Subhead">
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">#fff</item>	
	</style>
	
	<style name="TextAppearance.Small" parent="@android:style/TextAppearance.Material.Small">
		<item name="android:textSize">14sp</item>
		
	</style>
	
</resources>
