<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@*com.android.settings:id/category"
    android:layout_width="match_parent"
    android:layout_height="@*com.android.settings:dimen/dashboard_category_height"
    android:orientation="vertical"
    android:paddingBottom="@*com.android.settings:dimen/dashboard_category_padding_bottom"
    android:background="@*com.android.settings:drawable/dashboard_category_title_bg">

    <TextView android:id="@android:id/title"
        android:layout_width="match_parent"
		android:layout_height="62dp"
        android:paddingStart="@*com.android.settings:dimen/dashboard_category_title_margin_start"
		android:singleLine="true"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:textAppearance="@*com.android.settings:style/TextAppearance.CategoryTitle"
        android:textAlignment="center"
	/>

</LinearLayout>
